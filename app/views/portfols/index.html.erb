<h1 class="display-2 home-title text-center">This is my <span id="my-name">Portfolio!!</span></h1>
<div class="text-right mb-4">
  <%= link_to "View All Portfolios", all_portfolio_path, class:"btn btn-info text-right"  %>
</div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @portfols.each_with_index do |portfol, idx| %>
      <li data-target="carouselExampleIndicators" data-slide-to="<%= idx %>" class="<%= idx === 0 ? 'active' : 'bg'  %>"</li>
    <% end %>
  </ol>
  <!-- inner carousel -->
  <div class="carousel-inner">
    <% @portfols.each_with_index do |portfol, idx| %>
      <div class="carousel-item <%= idx.zero? ? 'active' : '' %>">
        <%= link_to portfol_path(portfol) do %>
          <%= image_tag portfol.main_image.url, class: 'd-block image-responsive', size: '1200x600' if portfol.main_image.url %>
        <% end %>
        <div class="carousel-caption d-none d-md-block">
          <h5 class="portfol-title">[ <%= portfol.title %> ]</h5>
          <p class="portfol-subtitle"> <%= portfol.subtitle %> </p>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Controls -->
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="text-right mt-4">
  <%= link_to "View All Portfolios", all_portfolio_path, class:"btn btn-info text-right"  %>
</div>
