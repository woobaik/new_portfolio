  <p>

  <p>
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </p>

  <p>
    <%= f.file_field :main_image %>
  </p>
  <p>
    <%= f.file_field :thumb_image %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
