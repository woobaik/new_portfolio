<div class="continer portfol-show-all">
  <div class="row">
    <div class="col-md-7 text-center">
      <%= image_tag @portfol.main_image.url, class:"image-fluid", alt: 'Main', width: '80%' %>
    </div>
    <div class="col-md-5 text-center">
      <h1 class="portfol-show-title"> <%= @portfol.title %></h1>
      <h3> <%= @portfol.subtitle %> </h3>
      <h6> <%= @portfol.body %> </h6>
    </div>
  </div>
</div>
<div class="text-right mt-4">
  <%= link_to "View All Portfolios", all_portfolio_path, class:"btn btn-info"  %>
</div>
