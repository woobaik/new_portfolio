<% if flash[:alert] %>
  <%= js add_gritter(flash[:notice], :title => "OOPS!") %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "OMG!!") %>
<% elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], :title => "HEY!", time: 1000) %>
<% else flash[:success] %>
  <%= js add_gritter(flash[:success], :title => "Oh yes!!") %>
<% end %>
